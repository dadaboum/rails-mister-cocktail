
<%= render 'shared/banner' %>

<div class="body-second_screen">
  <div class="container">
    <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path 'bffg0yzmcpkot2aph2hb' %>');">

          <div class="card-description">
            <h2><%= cocktail.name %></h2>
          </div>
          <%= link_to cocktail_path(cocktail), method: :delete do %>
            <i class="fa fa-trash-alt card-bin"></i>
          <% end %>
           <%= link_to cocktail.name, cocktail_path(cocktail), class: "card-link" %>
        </div>


      </div>
    <% end %>
    </div>
  </div>
</div>
